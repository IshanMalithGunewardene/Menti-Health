<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#181818"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_mood_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Your Journal Entry"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center_horizontal" />

    <!-- Selected Mood Display -->
    <TextView
        android:id="@+id/tv_selected_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select mood"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal" />

    <!-- Emoji Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <ImageButton
            android:id="@+id/emoji_yay"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="8dp"
            android:background="@drawable/emoji_background"
            android:contentDescription="Excellent mood"
            android:scaleType="centerInside"
            android:src="@drawable/yay" />

        <ImageButton
            android:id="@+id/emoji_nice"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="8dp"
            android:background="@drawable/emoji_background"
            android:contentDescription="Good mood"
            android:scaleType="centerInside"
            android:src="@drawable/nice" />

        <ImageButton
            android:id="@+id/emoji_meh"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="8dp"
            android:background="@drawable/emoji_background"
            android:contentDescription="Neutral mood"
            android:scaleType="centerInside"
            android:src="@drawable/meh" />

        <ImageButton
            android:id="@+id/emoji_eh"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="8dp"
            android:background="@drawable/emoji_background"
            android:contentDescription="Not great mood"
            android:scaleType="centerInside"
            android:src="@drawable/eh" />

        <ImageButton
            android:id="@+id/emoji_ugh"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="8dp"
            android:background="@drawable/emoji_background"
            android:contentDescription="Terrible mood"
            android:scaleType="centerInside"
            android:src="@drawable/ugh" />
    </LinearLayout>

    <!-- Entry Text -->
    <EditText
        android:id="@+id/et_edit_entry"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_edittext_border"
        android:padding="16dp"
        android:hint="Edit your thoughts and feelings..."
        android:textColorHint="#99FFFFFF"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="top|start"
        android:inputType="textMultiLine|textCapSentences"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:layout_marginBottom="24dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btn_save_changes"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2FE6BE"
        android:text="Save Changes"
        android:textColor="#181818"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
