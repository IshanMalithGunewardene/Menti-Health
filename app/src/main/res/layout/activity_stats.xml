<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1B1B">

    <!-- Biker Background -->
    <ImageView
        android:id="@+id/iv_biker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/biker"
        android:scaleType="centerCrop"
        android:alpha="0.7"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Step Counter Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="#232325"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <!-- Step Count -->
                    <TextView
                        android:id="@+id/tv_step_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="56sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Step Count Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today Step Count"
                        android:textSize="16sp"
                        android:textColor="#AAAAAA"
                        android:layout_marginBottom="24dp"/>
                        
                    <!-- Horizontal Progress Bar -->
                    <com.s23010494.mentihealth.HorizontalStepProgressView
                        android:id="@+id/horizontal_progress"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="16dp" />
                        
                    <!-- Progress Text -->
                    <TextView
                        android:id="@+id/tv_progress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 / 10,000 steps"
                        android:textSize="12sp"
                        android:textColor="#888888"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Debug Controls (Remove in production) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center">
                
                <Button
                    android:id="@+id/btn_add_100_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+100 Steps"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#31E3BD"
                    android:textColor="#000000"/>
                    
                <Button
                    android:id="@+id/btn_add_500_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+500 Steps"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#31E3BD"
                    android:textColor="#000000"/>
                    
                <Button
                    android:id="@+id/btn_reset_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:backgroundTint="#FF5252"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <!-- Nearby Parks Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nearby Parks for Walking"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Google Map Container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="#232325"
                android:padding="4dp">
                
                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>

