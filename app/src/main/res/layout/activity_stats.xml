<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1B1B">

    <!-- Biker Background -->
    <ImageView
        android:id="@+id/iv_biker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/biker"
        android:scaleType="centerCrop"
        android:alpha="0.7"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Mood Statistics Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="#232325"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Mood Bar Chart -->
                    <com.s23010494.mentihealth.MoodBarChartView
                        android:id="@+id/mood_bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                        
                    <!-- Chart Controls -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="4dp">
                        
                        <Button
                            android:id="@+id/btn_refresh_mood_chart"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="Refresh"
                            android:layout_marginEnd="8dp"
                            android:backgroundTint="#31E3BD"
                            android:textColor="#000000"
                            android:textSize="11sp"/>
                            
                        <Button
                            android:id="@+id/btn_animate_mood_chart"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="Animate"
                            android:backgroundTint="#31E3BD"
                            android:textColor="#000000"
                            android:textSize="11sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Step Counter Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="#232325"
                android:layout_marginBottom="24dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="24dp">

                    <!-- Semicircular Progress Arc (Above everything) -->
                    <com.s23010494.mentihealth.SemicircularStepProgressView
                        android:id="@+id/semicircular_progress"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="16dp" />

                    <!-- Step Count (Below the arc) -->
                    <TextView
                        android:id="@+id/tv_step_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/semicircular_progress"
                        android:layout_centerHorizontal="true"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <!-- Step Count Label -->
                    <TextView
                        android:id="@+id/tv_step_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_step_count"
                        android:layout_centerHorizontal="true"
                        android:text="Today Step Count"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:layout_marginTop="4dp"/>
                        
                    <!-- Progress Text -->
                    <TextView
                        android:id="@+id/tv_progress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_step_label"
                        android:layout_centerHorizontal="true"
                        android:text="0 / 10,000 steps"
                        android:textSize="12sp"
                        android:textColor="#888888"
                        android:layout_marginTop="8dp"/>
                        
                    <!-- Goal completion text -->
                    <TextView
                        android:id="@+id/tv_goal_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_progress_text"
                        android:layout_centerHorizontal="true"
                        android:text="Keep going! ðŸ’ª"
                        android:textSize="11sp"
                        android:textColor="#31E3BD"
                        android:layout_marginTop="4dp"
                        android:visibility="gone"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Debug Controls (Remove in production) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:gravity="center">
                
                <!-- Step counter debug buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center">
                    
                    <Button
                        android:id="@+id/btn_add_100_steps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+100 Steps"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="#31E3BD"
                        android:textColor="#000000"/>
                        
                    <Button
                        android:id="@+id/btn_add_500_steps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+500 Steps"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="#31E3BD"
                        android:textColor="#000000"/>
                        
                    <Button
                        android:id="@+id/btn_reset_steps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reset"
                        android:backgroundTint="#FF5252"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
                
                <!-- Sample data generation buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    
                    <Button
                        android:id="@+id/btn_generate_sample_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Generate Sample Data"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="#9C27B0"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"/>
                        
                    <Button
                        android:id="@+id/btn_clear_sample_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear Sample Data"
                        android:backgroundTint="#FF9800"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Mood Trend Analysis Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="#232325"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Mood Trend Graph -->
                    <com.s23010494.mentihealth.MoodTrendGraphView
                        android:id="@+id/mood_trend_graph"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                        
                    <!-- Graph Controls -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp">
                        
                        <Button
                            android:id="@+id/btn_refresh_graph"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Refresh Data"
                            android:layout_marginEnd="8dp"
                            android:backgroundTint="#31E3BD"
                            android:textColor="#000000"
                            android:textSize="12sp"/>
                            
                        <Button
                            android:id="@+id/btn_animate_graph"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Animate"
                            android:backgroundTint="#31E3BD"
                            android:textColor="#000000"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Nearby Parks Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nearby Parks for Walking"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Google Map Container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="#232325"
                android:padding="4dp">
                
                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>

