<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/terms_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181818">

    <!-- Illustration -->
    <ImageView
        android:id="@+id/iv_illustration"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:src="@drawable/bikerbg"
        android:contentDescription="@string/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Welcome Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="We are happy to help you, name"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="22sp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/iv_illustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <!-- Description -->
    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="We will help you to capturing and fix your mood and mind through our journey"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <!-- Terms and Conditions -->
    <TextView
        android:id="@+id/tv_terms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="By using this application, you agree to our terms and conditions"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <!-- Let's Start Button -->
    <Button
        android:id="@+id/btn_start"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Let's Start"
        android:textAllCaps="false"
        android:textColor="#181818"
        android:textStyle="bold"
        android:drawableEnd="@drawable/arrow"
        android:drawablePadding="8dp"
        app:backgroundTint="#2FDFBA"
        android:background="@drawable/rounded_button_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

